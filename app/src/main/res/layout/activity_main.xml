<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"



    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.zombiesattack.GameView
        android:id = "@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/rl_gameover"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:id="@+id/txt_game_over1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:textSize="50sp"
            android:layout_centerInParent="true"
            android:textColor="#009933"/>
        <TextView

            android:id="@+id/txt_game_over2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Try Again"
            android:textSize="50sp"
            android:layout_below="@+id/txt_game_over1"
            android:layout_centerInParent="true"
            android:textColor="#009933"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:background="#009933"
        android:textColor="#000000"/>

    <RelativeLayout
        android:id="@+id/rl_HUD"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/speed" />

        <ImageButton
            android:id="@+id/reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speed"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/reload" />

        <ImageButton
            android:id="@+id/damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reload"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/damage" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="163dp"
            android:layout_height="89dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="200dp"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="308dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ActionBtn"
            android:layout_width="88dp"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="594dp"
            android:layout_marginLeft="594dp"
            android:layout_marginTop="315dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_marginBottom="13dp"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />

        <ImageButton
            android:id="@+id/LeftButton"
            android:layout_width="114dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="315dp"
            android:layout_marginBottom="14dp"
            app:srcCompat="@drawable/abc_vector_test" />

        <ImageButton
            android:id="@+id/RightBtn"
            android:layout_width="114dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="316dp"
            android:layout_marginEnd="473dp"
            android:layout_marginRight="473dp"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/LeftButton"
            android:layout_toRightOf="@+id/LeftButton"
            android:rotationY="180"
            app:srcCompat="@drawable/abc_vector_test" />
    </RelativeLayout>




</RelativeLayout>